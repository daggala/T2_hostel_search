/* 	sauður 1
	Er í klasanum staylength
	Er að reikna og segja hvaða dögum á að leita eftir í gagnagrunninum
	Gerir ráð fyrir því að bókað sé á milli tveggja mánaða
	Gætum sett gisti limit á 20 daga til þess að það sé alltaf rétt
	Setjum villumeldingu ef valdnar eru fleiri en 20 nætur 
*/

List daysInMonth;
boolean isSameMonth = arrMonth == depMonth;
int arrivalDay;

if (isSameMonth) {
	skilaðu lista af dagsetningum
}

else if(month == feb) {
	int monthLength = 28;

	for (int i = arrivalDay; i <= monthLength; i++) {
		constructString = toString(i + arrMonth + arrYear)
		list.add(constructString);
	}

	for (int i = 1; i <= depDay; i++) {
		constructString = toString(i + depMonth + depYEar)
		list.add(constructString);
	}

	return daysInMonth;

}

else if (month == ap jun sept nov) {
	sama
}

